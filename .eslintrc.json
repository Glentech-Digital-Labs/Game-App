{
  "extends": "next/core-web-vitals",
  "rules": {
    "import/no-unresolved": ["error", { "caseSensitive": true }],
    // "@next/next/no-css-tags": "off" // (optional) Disable specific rule if needed
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "moduleDirectory": ["node_modules", "."],
        "caseSensitive": true
      }
    }
  }
}
